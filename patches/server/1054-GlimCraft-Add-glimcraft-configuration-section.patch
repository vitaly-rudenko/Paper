Subject: [PATCH] [GlimCraft] Add "glimcraft" configuration section


diff --git a/src/main/java/io/papermc/paper/configuration/GlobalConfiguration.java b/src/main/java/io/papermc/paper/configuration/GlobalConfiguration.java
index 2874bc3001c4e7d9191e47ba512c5a68369c21f1..4b342da42ae75a4248cecd1b839ef499a678fa5c 100644
--- a/src/main/java/io/papermc/paper/configuration/GlobalConfiguration.java
+++ b/src/main/java/io/papermc/paper/configuration/GlobalConfiguration.java
@@ -344,4 +344,20 @@ public class GlobalConfiguration extends ConfigurationPart {
         public boolean disableChorusPlantUpdates = false;
         public boolean disableMushroomBlockUpdates = false;
     }
+
+    public Glimcraft glimcraft;
+    public class Glimcraft extends ConfigurationPart {
+        public String apiUrl;
+        public String apiKey;
+
+        private @Nullable WhitelistApi whitelistApi;
+        public WhitelistApi getWhitelistApi() {
+            if (whitelistApi == null) {
+                LOGGER.error("[GlimCraft] Initializing WhitelistApi...");
+                whitelistApi = new WhitelistApi(apiUrl, apiKey);
+            }
+
+            return whitelistApi;
+        }
+    }
 }
